= form_with(model: user) do |form|
  - if user.errors.any?
    .m-4 style='color: red'
      h2 = "#{t('errors.template.header', model: User.model_name.human, count: user.errors.count)}"
      ul
        - user.errors.each do |error|
          li = error.full_message

  .text-center.space-y-2
    = form.label :nickname, style: 'display: block', class: 'text-lg' data-controller='disable-button'
    = form.text_field :nickname, placeholder: 'ニックネームを入力', required: true, pattern: '.*[^\s]+.*', title: '空白だけの入力はできません',
      data: { action: "input->disable-button#toggle", disable_button_target: 'input' },
      class: 'p-2 border mr-2 border-gray-300 border-2 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500'

    = form.submit '更新', data: { disable_button_target: 'button'}, disabled: true, class: 'btn btn-blue'
