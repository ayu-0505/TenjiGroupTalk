div(
  data-controller='dropdown'
  data-action='click@window->dropdown#hide
               touchstart@window->dropdown#hide
               keydown.up->dropdown#previousItem
               keydown.down->dropdown#nextItem
               keydown.esc->dropdown#hide'
  class='inline-block relative'
  id='hamburger-menu'
)
  button data-action='dropdown#toggle:stop' class='menu px-2.5 pt-1 rounded'
    = image_tag('menu.png', class: 'icon w-14 h-14 hover:bg-teal-400', alt: 'メニューボタンの３本線マーク')
  div data-dropdown-target='menu' role='navigation' class='hidden absolute top-4 right-0 z-10 mt-5 w-screen max-w-max'
    div class='text-sm bg-white shadow-lg rounded border overflow-hidden w-40'
      = link_to 'トップページ', dashboard_path,
        class: 'no-underline block pl-4 py-2 text-gray-900 bg-white hover:bg-gray-100 whitespace-nowrap focus:bg-gray-100',
        data: {turbo: false, dropdown_target: 'menuItem'}
      = link_to 'グループ', groups_path,
        class: 'no-underline block pl-4 py-2 text-gray-900 bg-white hover:bg-gray-100 whitespace-nowrap focus:bg-gray-100',
        data: {turbo: false, dropdown_target: 'menuItem'}
      = link_to user_path(current_user),
          class: 'no-underline block pl-4 py-2 text-gray-900 bg-white hover:bg-gray-100 whitespace-nowrap focus:bg-gray-100',
          data: {turbo: false, dropdown_target: 'menuItem'} do
            .flex.items-center.justify-between.pr-2
              | プロフィール
              = image_tag current_user.image, alt: 'ログインユーザーアイコン', class: 'w-6 h-6 rounded-full border-1 border bg-gray-300'
      hr class='border-t'
      = link_to 'ログアウト', log_out_path,
        class: 'no-underline block pl-4 py-2 text-gray-900 bg-white hover:bg-gray-100 whitespace-nowrap focus:bg-gray-100',
        data: {turbo: false, ropdown_target: 'menuItem'}
